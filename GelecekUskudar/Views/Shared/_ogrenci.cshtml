<div class="container">
    <div class="row">
        <div class="col-md-6">

            <div class="input-group mb-3">
                <span class="input-group-text" style="color:black;border-color:black; box-shadow: 0 0 1px 1px black;">İsim soyisim:</span>
                <input type="text" aria-label="İsim" class="form-control" style=" color:black;border-color:black; box-shadow: 0 0 1px 1px black;">
                <input type="text" aria-label="Soyisim" class="form-control" style="background-color:white; color:black;border-color:black; box-shadow: 0 0 1px 1px black;">
            </div>

            <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupSelect01" style="color:black;border-color:black; box-shadow: 0 0 1px 1px black;">Öğretim:</label>
                <select class="form-select" id="inputGroupSelect01" style="color:black;border-color:black; box-shadow: 0 0 1px 1px black;">
                    <option value="1">İlkokul</option>
                    <option value="2">Ortaokul</option>
                    <option value="3">Lise</option>
                </select>
            </div>

            <div class="input-group mb-3" style="background-color:orange;">
                <input type="file" class="form-control" id="inputGroupFile02" style="background-color:white; color:black;border-color:black; box-shadow: 0 0 1px 1px black;">
                @*<label class="input-group-text" for="inputGroupFile02" style="background-color:dodgerblue; color:black;">Yükle</label>*@
            </div>

            <div class="mb-3">
                <label for="ogrenciPuani" class="form-label">Öğrenci Puanı:</label>
                <input type="number" class="form-control" id="ogrenciPuani" min="0" max="100" style="background-color:white; color:black;border-color:black; box-shadow: 0 0 1px 1px black;">
            </div>

            <button type="submit" class="btn btn-primary">Öğrenci ekle</button>


        </div>
        <div class="col-md-6">

            <div class="form-floating" style="width: 700px;">
                <textarea class="form-control" placeholder="..." id="floatingTextarea" style="height: 400px; background-color:white; color:black;border-color:black; box-shadow: 0 0 1px 1px black;"></textarea>
                <label for="floatingTextarea">Öğretmenin öğrenci hakkında yorumu:</label>
            </div>

        </div>
    </div>
</div>
