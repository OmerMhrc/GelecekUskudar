@model Ogrenci

<form method="post" asp-controller="Mulakat" asp-action="basvuru" enctype="multipart/form-data">
    <div class="container">

        <div class="row">
            <div class="col-md-6">

                <div class="mb-3">
                    <label for="ogrenci-isim" class="form-label">Öğrenci İsmi</label>
                    <input type="text" name="Name" asp-for="Name" aria-label="İsim" class="form-control" style="color:black;border-color:black; box-shadow: 0 0 1px 1px black;" />
                </div>

                <div class="mb-3">
                    <label for="ogrenci-soyisim" class="form-label">Öğrenci Soyismi</label>
                    <input type="text" name="Surname" asp-for="Surname" aria-label="Soyisim" class="form-control" style="background-color:white; color:black;border-color:black; box-shadow: 0 0 1px 1px black;" />
                </div>

                <div class="mb-3">
                    <label for="telefonNumarasi" class="form-label">Telefon NUmarası</label>
                    <input type="text" name="TelefonNumarasi" asp-for="TelefonNumarasi" aria-label="Tel No" class="form-control" style="color:black;border-color:black; box-shadow: 0 0 1px 1px black;" />
                </div>

                <div class="mb-3">
                    <label for="inputGroupSelect01">Öğretim</label>
                    <select name="OgrenimDurumu" asp-for="OgrenimDurumu" class="form-select" id="inputGroupSelect01" style="color:black;border-color:black; box-shadow: 0 0 1px 1px black;">
                        <option value="" disabled selected hidden>Lütfen seçin</option>
                        <option value="1">İlkokul</option>
                        <option value="2">Ortaokul</option>
                        <option value="3">Lise</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="MulakatNotu" class="form-label">Öğrenci Puanı:</label>
                    <input type="number" name="MulakatNotu" asp-for="MulakatNotu" class="form-control" id="MulakatPuani" min="0" max="100" style="background-color:white; color:black;border-color:black; box-shadow: 0 0 1px 1px black;" />
                </div>

                <div class="checkbox-container mb-3">  
                    <label for="referansMektubu" style="font-size: 18px" >Referans mektubu</label>
                    <input type="checkbox" id="referansMektubu" name="ReferansMektubu" asp-for="ReferansMektubu" style="width: 20px ; height: 20px">

                    <label for="niyetMektubu" style="font-size: 18px ; margin-left: 100px">Niyet mektubu</label>
                    <input type="checkbox" id="niyetMektubu" name="NiyetMektubu" asp-for="NiyetMektubu" style="width: 20px ; height: 20px">
                </div>
           </div>


            <div class="col-md-6">
                <div class="form-floating" style="width: 700px;">
                    <textarea name="OgretmenYorumu" asp-for="OgretmenYorumu" class="form-control" placeholder="..." id="floatingTextarea" style="height: 400px; background-color:white; color:black;border-color:black; box-shadow: 0 0 1px 1px black;"></textarea>
                    <label for="floatingTextarea">Öğretmenin öğrenci hakkında yorumu:</label>
                </div>
            </div>

            <div class="mb-3"> <button type="submit" class="btn btn-primary">Öğrenci ekle</button>  </div>

        </div>
    </div>
</form>

<p style="font-size: 24px; font-weight: bold;" >Excel'e Kayıt Edilicek Öğrenciler:</p>

<div class="row">

   <div class="col-md-1">
      <form asp-controller="Export" asp-action="GetIlkokulExcel" method="get">
         <button type="submit">İlkokul</button>
      </form>
   </div>

   <div class="col-md-1">
      <form asp-controller="Export" asp-action="GetOrtaokulExcel" method="get" style="margin-right: 50px;">
         <button type="submit">Ortaokul</button>
      </form>
   </div>

   <div class="col-md-1">
      <form asp-controller="Export" asp-action="GetLiseExcel" method="get" style="margin-right: 50px;">
         <button type="submit">Lise</button>
      </form>
   </div>

</div>




